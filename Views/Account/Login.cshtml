@using TestLatviaProject.View_Models
@model LoginVM

<h1 class="text-info">Login</h1>
<form asp-controller="Account" asp-action="Login" method="post" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserName" class="col-md-2"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-md-2"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <div class="custom-checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(r => r.RememberMe)
                </label>
            </div>
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Login</button>
</form>