@using TestLatviaProject.Dtos
@using TestLatviaProject.Enums;
@model TasksDto

<form method="post" asp-action="Update">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter title" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter description" required />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DueDate">Due</label>
        <input asp-for="DueDate" type="date" class="form-control" placeholder="Choose date" required />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status">Status</label>
        <select asp-for="Status" asp-items="@Model.StatusList" class="form-control">
            <option selected disabled>-- Select Status --</option>
        </select>
    </div>

    <input type="hidden" asp-for="Id" />
    <br />
    <button class="btn btn-primary" type="submit">Submit</button>
</form>