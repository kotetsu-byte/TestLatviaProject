@using TestLatviaProject.Dtos
@model TasksDto

<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter title" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter description" required />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DueDate">Due</label>
        <input asp-for="DueDate" type="date" class="form-control" placeholder="Choose date" required />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Status" value="Incompleted" />
    <br />
    <button class="btn btn-primary" type="submit">Submit</button>
</form>